<UserControl x:Class="WPFLLM.Views.ChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WPFLLM.ViewModels">

    <UserControl.Resources>
        <DataTemplate DataType="{x:Type vm:ChatMessageViewModel}">
            <Grid Margin="8,4">
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="HorizontalAlignment" Value="Left"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsUser}" Value="True">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Delete button (left for assistant, right for user) -->
                <Button x:Name="DeleteBtn"
                        Grid.Column="0"
                        Content="ðŸ—‘"
                        FontSize="10"
                        Padding="4,2"
                        Margin="0,0,4,0"
                        VerticalAlignment="Top"
                        Opacity="0"
                        Cursor="Hand"
                        Command="{Binding DataContext.DeleteMessageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        CommandParameter="{Binding}"
                        Visibility="{Binding IsUser, Converter={StaticResource InverseBoolToVisConverter}}">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#EF4444"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Border Grid.Column="1" Padding="12,8" CornerRadius="12" MaxWidth="600">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="{StaticResource AssistantMessageBrush}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsUser}" Value="True">
                                    <Setter Property="Background" Value="{StaticResource UserMessageBrush}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <TextBlock Text="{Binding Content}" 
                               TextWrapping="Wrap"
                               Foreground="{StaticResource TextBrush}"
                               FontSize="14"/>
                </Border>
                
                <!-- Delete button for user messages (on right) -->
                <Button x:Name="DeleteBtnUser"
                        Grid.Column="1"
                        Content="ðŸ—‘"
                        FontSize="10"
                        Padding="4,2"
                        Margin="4,0,0,0"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Right"
                        Opacity="0"
                        Cursor="Hand"
                        Command="{Binding DataContext.DeleteMessageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        CommandParameter="{Binding}"
                        Visibility="{Binding IsUser, Converter={StaticResource BoolToVis}}">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#EF4444"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Grid.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetName="DeleteBtn" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.15"/>
                                <DoubleAnimation Storyboard.TargetName="DeleteBtnUser" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.15"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetName="DeleteBtn" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.15"/>
                                <DoubleAnimation Storyboard.TargetName="DeleteBtnUser" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.15"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Grid.Triggers>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="280"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border x:Name="Sidebar" Background="{StaticResource SurfaceBrush}" Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Button Content="{DynamicResource Btn_NewChat}" 
                        Style="{StaticResource PrimaryButton}"
                        Command="{Binding NewConversationCommand}"
                        Margin="0,0,0,12"/>

                <ListBox Grid.Row="1" 
                         ItemsSource="{Binding Conversations}"
                         SelectedItem="{Binding SelectedConversation}"
                         Style="{StaticResource ModernListBox}"
                         ItemContainerStyle="{StaticResource ConversationListItem}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <TextBlock Text="{Binding Title}" 
                                           TextTrimming="CharacterEllipsis"
                                           Foreground="{StaticResource TextBrush}"
                                           Visibility="{Binding IsEditing, Converter={StaticResource InverseBoolToVisConverter}}"
                                           MouseLeftButtonDown="ConversationTitle_DoubleClick"/>
                                <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                                         Visibility="{Binding IsEditing, Converter={StaticResource BoolToVis}}"
                                         Style="{StaticResource ModernTextBox}"
                                         KeyDown="ConversationTitleEdit_KeyDown"
                                         LostFocus="ConversationTitleEdit_LostFocus"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <StackPanel Grid.Row="2" Margin="0,12,0,0">
                    <Button Content="{DynamicResource Btn_DeleteSelected}"
                            Style="{StaticResource SecondaryButton}"
                            Command="{Binding DeleteConversationCommand}"
                            Margin="0,0,0,8"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Content="{DynamicResource Btn_Export}"
                                Style="{StaticResource SecondaryButton}"
                                Command="{Binding ExportConversationCommand}"
                                ToolTip="Export to Markdown or JSON"/>
                        <Button Grid.Column="2" Content="{DynamicResource Btn_Import}"
                                Style="{StaticResource SecondaryButton}"
                                Command="{Binding ImportConversationCommand}"
                                ToolTip="Import from JSON"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Sidebar Toggle Button -->
        <Border Grid.Column="1" 
                Background="{StaticResource SurfaceLightBrush}" 
                Width="24"
                Cursor="Hand"
                MouseLeftButtonDown="ToggleSidebar_Click">
            <Grid>
                <TextBlock x:Name="ToggleIcon"
                           Text="â—€" 
                           FontSize="12"
                           Foreground="{StaticResource TextMutedBrush}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           ToolTip="Ukryj/PokaÅ¼ konwersacje"/>
            </Grid>
        </Border>

        <!-- Chat Area -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Search Bar -->
            <Border Background="{StaticResource SurfaceBrush}" 
                    Padding="12,8"
                    BorderThickness="0,0,0,1"
                    BorderBrush="{StaticResource SurfaceLightBrush}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBox}">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Return" Command="{Binding SemanticSearchCommand}"/>
                            <KeyBinding Key="Escape" Command="{Binding CloseSearchCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>
                    
                    <Button Grid.Column="1" 
                            Content="ðŸ” Search"
                            Style="{StaticResource SecondaryButton}"
                            Command="{Binding SemanticSearchCommand}"
                            IsEnabled="{Binding IsSearching, Converter={StaticResource InverseBoolConverter}}"
                            Padding="12,6"
                            Margin="8,0,0,0"/>
                    
                    <!-- Embedding status -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="8,0,0,0">
                        <Button Command="{Binding GenerateEmbeddingsCommand}"
                                IsEnabled="{Binding IsGeneratingEmbeddings, Converter={StaticResource InverseBoolConverter}}"
                                Padding="8,6"
                                ToolTip="Generate embeddings for messages">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
                                    <Setter Property="Content" Value="âš¡"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsGeneratingEmbeddings}" Value="True">
                                            <Setter Property="Content" Value="â³"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <TextBlock Text="{Binding PendingEmbeddingsCount, StringFormat='{}{0} pending'}"
                                   Foreground="{StaticResource TextMutedBrush}"
                                   FontSize="11"
                                   VerticalAlignment="Center"
                                   Margin="6,0,0,0"
                                   Visibility="{Binding PendingEmbeddingsCount, Converter={StaticResource CountToVis}}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Search Results Overlay -->
            <Border Grid.Row="1"
                    Background="{StaticResource BackgroundBrush}"
                    Visibility="{Binding ShowSearchResults, Converter={StaticResource BoolToVis}}"
                    Padding="16"
                    Panel.ZIndex="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <TextBlock Text="ðŸ” Search Results" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextBrush}"/>
                        <Button Content="âœ•" 
                                Style="{StaticResource SecondaryButton}"
                                Command="{Binding CloseSearchCommand}"
                                Padding="8,4"
                                Margin="12,0,0,0"/>
                    </StackPanel>
                    
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding SearchResults}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource SurfaceBrush}"
                                            CornerRadius="8"
                                            Padding="12"
                                            Margin="0,0,0,8"
                                            Cursor="Hand"
                                            MouseLeftButtonDown="SearchResult_Click">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding ConversationTitle}"
                                                           FontWeight="SemiBold"
                                                           Foreground="{StaticResource PrimaryBrush}"
                                                           FontSize="13"/>
                                                <TextBlock Text="{Binding ScoreText}"
                                                           Foreground="{StaticResource TextMutedBrush}"
                                                           FontSize="11"
                                                           Margin="8,0,0,0"
                                                           VerticalAlignment="Center"/>
                                                <TextBlock Foreground="{StaticResource TextMutedBrush}"
                                                           FontSize="11"
                                                           Margin="8,0,0,0"
                                                           VerticalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="ðŸ¤–"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsUser}" Value="True">
                                                                    <Setter Property="Text" Value="ðŸ‘¤"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                            
                                            <TextBlock Grid.Row="1"
                                                       Text="{Binding MessageContent}"
                                                       TextWrapping="Wrap"
                                                       Foreground="{StaticResource TextBrush}"
                                                       FontSize="13"
                                                       Margin="0,6,0,0"/>
                                            
                                            <TextBlock Grid.Row="2"
                                                       Text="{Binding CreatedAt, StringFormat='{}{0:g}'}"
                                                       Foreground="{StaticResource TextMutedBrush}"
                                                       FontSize="10"
                                                       Margin="0,6,0,0"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Messages -->
            <ScrollViewer x:Name="MessagesScrollViewer" 
                          Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          Padding="16">
                <Grid>
                    <!-- Welcome message when no messages -->
                    <StackPanel VerticalAlignment="Center" 
                                HorizontalAlignment="Center"
                                Visibility="{Binding HasMessages, Converter={StaticResource InverseBoolToVisConverter}}">
                        <TextBlock Text="ðŸ’¬" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                        <TextBlock Text="{DynamicResource Chat_Welcome}" 
                                   FontSize="20" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextBrush}"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="{DynamicResource Chat_WelcomeHint}"
                                   Foreground="{StaticResource TextMutedBrush}"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   MaxWidth="400"/>
                    </StackPanel>
                    
                    <ItemsControl ItemsSource="{Binding Messages}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </Grid>
            </ScrollViewer>

            <!-- Warning Message -->
            <Border Grid.Row="2" 
                    Background="#FEF3C7"
                    Padding="12"
                    Visibility="{Binding HasWarning, Converter={StaticResource BoolToVis}}">
                <TextBlock Text="{Binding WarningMessage}" 
                           Foreground="#92400E"
                           FontWeight="SemiBold"
                           TextWrapping="Wrap"/>
            </Border>

            <!-- Input Area -->
            <Border Grid.Row="3" 
                    Background="{StaticResource SurfaceBrush}"
                    Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBox}"
                             AcceptsReturn="False"
                             MaxHeight="120"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Return" Command="{Binding SendMessageCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>

                    <!-- RAG Toggle -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="12,0,0,0">
                        <CheckBox IsChecked="{Binding UseRag}"
                                  Content="ðŸ“š RAG"
                                  Foreground="{StaticResource TextBrush}"
                                  VerticalAlignment="Center"
                                  ToolTip="WÅ‚Ä…cz/wyÅ‚Ä…cz wyszukiwanie w bazie wiedzy"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="8,0,0,0">
                        <Button Content="{DynamicResource Btn_Send}"
                                Style="{StaticResource PrimaryButton}"
                                Command="{Binding SendMessageCommand}"
                                IsEnabled="{Binding IsStreaming, Converter={StaticResource InverseBoolConverter}}"
                                Visibility="{Binding IsStreaming, Converter={StaticResource InverseBoolToVisConverter}}"/>
                        
                        <Button Content="{DynamicResource Btn_Stop}"
                                Style="{StaticResource SecondaryButton}"
                                Command="{Binding StopStreamingCommand}"
                                Visibility="{Binding IsStreaming, Converter={StaticResource BoolToVis}}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Status Bar -->
            <Border Grid.Row="4" 
                    Background="{StaticResource SurfaceBrush}"
                    Padding="16,8"
                    BorderThickness="0,1,0,0"
                    BorderBrush="{StaticResource SurfaceLightBrush}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding StatusText}" 
                                   Foreground="{StaticResource TextMutedBrush}"
                                   FontSize="12"/>
                        <TextBlock Text="{Binding RagStatusText}" 
                                   Foreground="{StaticResource PrimaryBrush}"
                                   FontSize="12"
                                   Margin="16,0,0,0"
                                   Visibility="{Binding IsRagEnabled, Converter={StaticResource BoolToVis}}"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="ðŸ”¬ Test RAG"
                                Style="{StaticResource SecondaryButton}"
                                Command="{Binding TestRetrievalCommand}"
                                Padding="8,4"
                                Margin="0,0,8,0"
                                ToolTip="Test retrieval with current input"/>
                        <Button Command="{Binding ToggleDebugPanelCommand}"
                                Padding="8,4"
                                ToolTip="Toggle RAG Debug Panel">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
                                    <Setter Property="Content" Value="ðŸ“Š Debug"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ShowDebugPanel}" Value="True">
                                            <Setter Property="Content" Value="ðŸ“Š Hide"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- RAG Debug Panel - Flight Recorder -->
        <Border Grid.Column="3" 
                Background="{StaticResource SurfaceBrush}"
                Width="420"
                Visibility="{Binding ShowDebugPanel, Converter={StaticResource BoolToVis}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Background="{StaticResource SurfaceLightBrush}" Padding="12,10">
                    <Grid>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âœˆï¸ " FontSize="14"/>
                            <TextBlock Text="{DynamicResource Debug_Title}" 
                                       FontSize="14" 
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextBrush}"/>
                            <TextBlock Text=" (Flight Recorder)" 
                                       FontSize="11"
                                       Foreground="{StaticResource TextMutedBrush}"
                                       VerticalAlignment="Center"
                                       Margin="4,0,0,0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <ComboBox ItemsSource="{Binding RetrievalModes}"
                                      SelectedItem="{Binding SelectedRetrievalMode}"
                                      Background="{StaticResource SurfaceLightBrush}"
                                      Foreground="{StaticResource TextBrush}"
                                      Padding="6,2"
                                      FontSize="11"
                                      Margin="0,0,8,0"/>
                            <Button Content="âœ•" 
                                    Style="{StaticResource SecondaryButton}"
                                    Command="{Binding ToggleDebugPanelCommand}"
                                    Padding="6,2"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Summary Cards -->
                <Border Grid.Row="1" Padding="12,8" BorderThickness="0,0,0,1" BorderBrush="{StaticResource SurfaceLightBrush}"
                        Visibility="{Binding LastRagTrace, Converter={StaticResource NullToVis}}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Total Time -->
                        <Border Background="{StaticResource SurfaceLightBrush}" CornerRadius="6" Padding="8,6" Margin="0,0,4,0">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="{Binding LastRagTrace.TotalTimeMs, StringFormat={}{0}ms}" 
                                           FontSize="16" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Center"/>
                                <TextBlock Text="{DynamicResource Debug_TotalTime}" FontSize="9" Foreground="{StaticResource TextMutedBrush}" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- TopK / Selected -->
                        <Border Grid.Column="1" Background="{StaticResource SurfaceLightBrush}" CornerRadius="6" Padding="8,6" Margin="2,0">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock FontSize="16" FontWeight="Bold" Foreground="{StaticResource TextBrush}" HorizontalAlignment="Center">
                                    <Run Text="{Binding LastRagTrace.IncludedChunks, Mode=OneWay}"/>
                                    <Run Text="/" Foreground="{StaticResource TextMutedBrush}"/>
                                    <Run Text="{Binding LastRagTrace.TotalCandidates, Mode=OneWay}" Foreground="{StaticResource TextMutedBrush}"/>
                                </TextBlock>
                                <TextBlock Text="{DynamicResource Debug_Sources}" FontSize="9" Foreground="{StaticResource TextMutedBrush}" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Vec Matches -->
                        <Border Grid.Column="2" Background="{StaticResource SurfaceLightBrush}" CornerRadius="6" Padding="8,6" Margin="2,0">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="{Binding LastRetrievalResult.Metrics.VectorMatches}" 
                                           FontSize="16" FontWeight="Bold" Foreground="#10B981" HorizontalAlignment="Center"/>
                                <TextBlock Text="Vec" FontSize="9" Foreground="{StaticResource TextMutedBrush}" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- KW Matches -->
                        <Border Grid.Column="3" Background="{StaticResource SurfaceLightBrush}" CornerRadius="6" Padding="8,6" Margin="4,0,0,0">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="{Binding LastRetrievalResult.Metrics.KeywordMatches}" 
                                           FontSize="16" FontWeight="Bold" Foreground="#F59E0B" HorizontalAlignment="Center"/>
                                <TextBlock Text="KW" FontSize="9" Foreground="{StaticResource TextMutedBrush}" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- TabControl -->
                <TabControl Grid.Row="2" 
                            SelectedIndex="{Binding SelectedDebugTab}"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="0">
                    <TabControl.Resources>
                        <Style TargetType="TabItem">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
                            <Setter Property="Padding" Value="12,8"/>
                            <Setter Property="FontSize" Value="11"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TabItem">
                                        <Border x:Name="Border" Background="Transparent" Padding="{TemplateBinding Padding}" BorderThickness="0,0,0,2" BorderBrush="Transparent">
                                            <ContentPresenter ContentSource="Header" HorizontalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                                <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TabControl.Resources>
                    
                    <!-- Tab: Sources (Selected chunks) -->
                    <TabItem Header="ðŸ“„ Sources">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="12,8">
                            <ItemsControl ItemsSource="{Binding RetrievedChunks}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource SurfaceLightBrush}" CornerRadius="6" Padding="10" Margin="0,0,0,6">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="ðŸ“„ " FontSize="11"/>
                                                    <TextBlock Text="{Binding DocumentName}" FontWeight="SemiBold" Foreground="{StaticResource PrimaryBrush}" FontSize="11"/>
                                                    <TextBlock Text="{Binding ChunkIndex, StringFormat=' [#{0}]'}" Foreground="{StaticResource TextMutedBrush}" FontSize="10"/>
                                                </StackPanel>
                                                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,4,0,0">
                                                    <Border Background="{StaticResource BackgroundBrush}" CornerRadius="3" Padding="4,1" Margin="0,0,3,0">
                                                        <TextBlock FontSize="9">
                                                            <Run Text="Vec:" Foreground="{StaticResource TextMutedBrush}"/>
                                                            <Run Text="{Binding VectorScoreText, Mode=OneWay}" Foreground="{StaticResource TextBrush}"/>
                                                        </TextBlock>
                                                    </Border>
                                                    <Border Background="{StaticResource BackgroundBrush}" CornerRadius="3" Padding="4,1" Margin="0,0,3,0">
                                                        <TextBlock FontSize="9">
                                                            <Run Text="KW:" Foreground="{StaticResource TextMutedBrush}"/>
                                                            <Run Text="{Binding KeywordScoreText, Mode=OneWay}" Foreground="{StaticResource TextBrush}"/>
                                                        </TextBlock>
                                                    </Border>
                                                    <Border Background="{StaticResource PrimaryBrush}" CornerRadius="3" Padding="4,1" Opacity="0.9">
                                                        <TextBlock FontSize="9" Foreground="White">
                                                            <Run Text="RRF:"/>
                                                            <Run Text="{Binding FusedScoreText, Mode=OneWay}"/>
                                                        </TextBlock>
                                                    </Border>
                                                </StackPanel>
                                                <TextBlock Grid.Row="2" Text="{Binding Content}" TextWrapping="Wrap" Foreground="{StaticResource TextBrush}" FontSize="10" MaxHeight="60" Margin="0,6,0,0" ToolTip="{Binding FullContent}"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </TabItem>
                    
                    <!-- Tab: Candidates (All evaluated) -->
                    <TabItem Header="ðŸ“Š Candidates">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Formula -->
                            <Border Background="{StaticResource SurfaceLightBrush}" Padding="8,4" Margin="12,8,12,4">
                                <TextBlock FontSize="10" Foreground="{StaticResource TextMutedBrush}">
                                    <Run Text="Formula: " FontWeight="SemiBold"/>
                                    <Run Text="{Binding LastRagTrace.FusionFormula, Mode=OneWay, FallbackValue='RRF(k=60)'}"/>
                                </TextBlock>
                            </Border>
                            
                            <!-- Candidates Table -->
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Padding="12,4">
                                <ItemsControl ItemsSource="{Binding AllCandidates}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Padding="8,6" Margin="0,0,0,2" CornerRadius="4">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Included}" Value="True">
                                                                <Setter Property="Background" Value="#1A3B82F6"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="24"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="50"/>
                                                        <ColumnDefinition Width="50"/>
                                                        <ColumnDefinition Width="55"/>
                                                        <ColumnDefinition Width="45"/>
                                                        <ColumnDefinition Width="20"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="{Binding Rank, StringFormat='#{0}'}" FontSize="10" Foreground="{StaticResource TextMutedBrush}" FontWeight="SemiBold"/>
                                                    <TextBlock Grid.Column="1" Text="{Binding SourceName}" FontSize="10" Foreground="{StaticResource TextBrush}" TextTrimming="CharacterEllipsis" ToolTip="{Binding Preview}"/>
                                                    <TextBlock Grid.Column="2" Text="{Binding VectorScoreText}" FontSize="10" Foreground="#10B981" HorizontalAlignment="Right"/>
                                                    <TextBlock Grid.Column="3" Text="{Binding KeywordScoreText}" FontSize="10" Foreground="#F59E0B" HorizontalAlignment="Right"/>
                                                    <TextBlock Grid.Column="4" Text="{Binding FinalScoreText}" FontSize="10" Foreground="{StaticResource PrimaryBrush}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                                    <TextBlock Grid.Column="5" Text="{Binding TokensText}" FontSize="9" Foreground="{StaticResource TextMutedBrush}" HorizontalAlignment="Right"/>
                                                    <TextBlock Grid.Column="6" Text="{Binding IncludedIcon}" FontSize="10" Foreground="#10B981" HorizontalAlignment="Center" FontWeight="Bold"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </TabItem>
                    
                    <!-- Tab: Timings -->
                    <TabItem Header="â±ï¸ Timings">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="12,8">
                            <StackPanel>
                                <TextBlock Text="{DynamicResource Debug_Latency}" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}" FontSize="12" Margin="0,0,0,12"/>
                                <ItemsControl ItemsSource="{Binding Timings}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="50"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding Name}" FontSize="11" Foreground="{StaticResource TextBrush}"/>
                                                <Border Grid.Column="1" Background="{StaticResource SurfaceLightBrush}" CornerRadius="2" Height="16" HorizontalAlignment="Left" Width="{Binding BarWidth}">
                                                    <Border Background="{StaticResource PrimaryBrush}" CornerRadius="2" Opacity="0.8"/>
                                                </Border>
                                                <TextBlock Grid.Column="2" Text="{Binding ElapsedText}" FontSize="11" Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Right" FontWeight="SemiBold"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                
                                <!-- Total -->
                                <Border BorderThickness="0,1,0,0" BorderBrush="{StaticResource SurfaceLightBrush}" Margin="0,8,0,0" Padding="0,8,0,0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="50"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="TOTAL" FontSize="11" Foreground="{StaticResource TextBrush}" FontWeight="Bold"/>
                                        <TextBlock Grid.Column="2" Text="{Binding LastRagTrace.TotalTimeMs, StringFormat={}{0}ms}" FontSize="11" Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Right" FontWeight="Bold"/>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </Grid>
        </Border>
    </Grid>
</UserControl>
