<UserControl x:Class="WPFLLM.Views.EmbeddingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WPFLLM.ViewModels">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <StackPanel MaxWidth="800">
            
            <!-- Header -->
            <TextBlock Text="{DynamicResource Emb_Title}" 
                       FontSize="28" 
                       FontWeight="Bold"
                       Foreground="{StaticResource TextBrush}"
                       Margin="0,0,0,8"/>
            <TextBlock Text="{DynamicResource Emb_Description}"
                       Foreground="{StaticResource TextMutedBrush}"
                       FontSize="14"
                       Margin="0,0,0,24"/>

            <!-- Mode Toggle -->
            <Border Background="{StaticResource SurfaceBrush}" 
                    CornerRadius="8" 
                    Padding="16"
                    Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel>
                        <TextBlock Text="{DynamicResource Emb_Mode}" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextBrush}"/>
                        <TextBlock Foreground="{StaticResource TextMutedBrush}" FontSize="13" Margin="0,4,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="{DynamicResource Emb_ModeAPI}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding UseLocalEmbeddings}" Value="True">
                                            <Setter Property="Text" Value="{DynamicResource Emb_ModeLocal}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock Text="{Binding CurrentModelStatus}" 
                                   Foreground="{StaticResource PrimaryBrush}"
                                   FontSize="12"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="{DynamicResource Emb_API}" 
                                   Foreground="{StaticResource TextMutedBrush}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        <CheckBox IsChecked="{Binding UseLocalEmbeddings}"
                                  VerticalAlignment="Center">
                            <CheckBox.LayoutTransform>
                                <ScaleTransform ScaleX="1.3" ScaleY="1.3"/>
                            </CheckBox.LayoutTransform>
                        </CheckBox>
                        <TextBlock Text="{DynamicResource Emb_Local}" 
                                   Foreground="{StaticResource TextBrush}"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Load Model Button -->
            <Border Background="{StaticResource SurfaceBrush}" 
                    CornerRadius="8" 
                    Padding="16"
                    Margin="0,0,0,24"
                    Visibility="{Binding UseLocalEmbeddings, Converter={StaticResource BoolToVis}}">
                <StackPanel Orientation="Horizontal">
                    <Button Content="{DynamicResource Emb_LoadModel}"
                            Style="{StaticResource PrimaryButton}"
                            Command="{Binding LoadModelCommand}"
                            Padding="16,8"/>
                    <Button Content="{DynamicResource Emb_RefreshStatus}"
                            Style="{StaticResource SecondaryButton}"
                            Command="{Binding RefreshStatusCommand}"
                            Padding="12,8"
                            Margin="8,0,0,0"/>
                </StackPanel>
            </Border>

            <!-- Download Progress -->
            <Border Background="{StaticResource SurfaceBrush}" 
                    CornerRadius="8" 
                    Padding="16"
                    Margin="0,0,0,16"
                    Visibility="{Binding IsDownloading, Converter={StaticResource BoolToVis}}">
                <StackPanel>
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding DownloadStatus}" 
                                   Foreground="{StaticResource TextBrush}"
                                   FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="1" 
                                   Foreground="{StaticResource TextMutedBrush}">
                            <Run Text="{Binding DownloadProgress, StringFormat='{}{0:F1}%'}"/>
                        </TextBlock>
                    </Grid>
                    
                    <ProgressBar Value="{Binding DownloadProgress}" 
                                 Maximum="100"
                                 Height="8"
                                 Foreground="{StaticResource PrimaryBrush}"
                                 Background="{StaticResource SurfaceLightBrush}"/>
                    
                    <Grid Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Foreground="{StaticResource TextMutedBrush}" FontSize="12">
                            <Run Text="{DynamicResource Emb_Downloaded}"/>
                            <Run Text="{Binding DownloadedBytes, Converter={StaticResource SizeConverter}, Mode=OneWay}"/>
                            <Run Text=" / "/>
                            <Run Text="{Binding TotalBytes, Converter={StaticResource SizeConverter}, Mode=OneWay}"/>
                        </TextBlock>
                        <Button Grid.Column="1"
                                Content="{DynamicResource Emb_Cancel}"
                                Style="{StaticResource SecondaryButton}"
                                Command="{Binding CancelDownloadCommand}"
                                Padding="12,4"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Status Message -->
            <TextBlock Text="{Binding StatusMessage}"
                       Foreground="{StaticResource PrimaryBrush}"
                       FontSize="13"
                       Margin="0,0,0,16"
                       Visibility="{Binding StatusMessage, Converter={StaticResource StringToVis}}"/>

            <!-- Available Models -->
            <TextBlock Text="{DynamicResource Emb_AvailableModels}" 
                       FontSize="18" 
                       FontWeight="Bold"
                       Foreground="{StaticResource TextBrush}"
                       Margin="0,0,0,12"/>

            <ItemsControl ItemsSource="{Binding AvailableModels}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{StaticResource SurfaceBrush}" 
                                CornerRadius="8" 
                                Padding="16"
                                Margin="0,0,0,12"
                                BorderThickness="2"
                                Cursor="Hand"
                                MouseLeftButtonDown="Model_Click">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Title & Status & Quality -->
                                <StackPanel Orientation="Horizontal">
                                    <RadioButton IsChecked="{Binding IsSelected}" 
                                                 GroupName="Models"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding DisplayName}" 
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TextBrush}"/>
                                    <TextBlock Text="{Binding QualityStars}" 
                                               Foreground="#FFD700"
                                               FontSize="14"
                                               VerticalAlignment="Center"
                                               Margin="8,0,0,0"
                                               ToolTip="{DynamicResource Emb_QualityTooltip}"/>
                                    <Border Background="{StaticResource SurfaceLightBrush}"
                                            CornerRadius="4"
                                            Padding="8,2"
                                            Margin="8,0,0,0">
                                        <TextBlock Text="{Binding StatusText}" 
                                                   FontSize="11"
                                                   Foreground="{StaticResource TextMutedBrush}"/>
                                    </Border>
                                </StackPanel>

                                <!-- Buttons -->
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Button Content="{DynamicResource Emb_Download}"
                                            Style="{StaticResource PrimaryButton}"
                                            Command="{Binding DataContext.DownloadModelCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Padding="12,6"
                                            Margin="0,0,4,0">
                                        <Button.Visibility>
                                            <MultiBinding Converter="{StaticResource DownloadButtonVis}">
                                                <Binding Path="Status"/>
                                                <Binding Path="DataContext.IsDownloading" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                            </MultiBinding>
                                        </Button.Visibility>
                                    </Button>
                                    <Button Content="{DynamicResource Emb_Resume}"
                                            Style="{StaticResource SecondaryButton}"
                                            Command="{Binding DataContext.DownloadModelCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Padding="12,6"
                                            Margin="0,0,4,0">
                                        <Button.Visibility>
                                            <MultiBinding Converter="{StaticResource ResumeButtonVis}">
                                                <Binding Path="Status"/>
                                                <Binding Path="DataContext.IsDownloading" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                            </MultiBinding>
                                        </Button.Visibility>
                                    </Button>
                                    <Button Content="ðŸ—‘ï¸"
                                            Style="{StaticResource SecondaryButton}"
                                            Command="{Binding DataContext.DeleteModelCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Padding="8,6"
                                            ToolTip="{DynamicResource Emb_DeleteTooltip}">
                                        <Button.Visibility>
                                            <Binding Path="Status" Converter="{StaticResource DeleteButtonVis}"/>
                                        </Button.Visibility>
                                    </Button>
                                </StackPanel>

                                <!-- Description -->
                                <TextBlock Grid.Row="1" Grid.ColumnSpan="2"
                                           Text="{Binding Description}"
                                           Foreground="{StaticResource TextMutedBrush}"
                                           FontSize="13"
                                           TextWrapping="Wrap"
                                           Margin="24,8,0,0"/>

                                <!-- Stats -->
                                <StackPanel Grid.Row="2" Grid.ColumnSpan="2"
                                            Orientation="Horizontal"
                                            Margin="24,8,0,0">
                                    <Border Background="{StaticResource SurfaceLightBrush}"
                                            CornerRadius="4"
                                            Padding="8,4"
                                            Margin="0,0,8,0">
                                        <TextBlock Foreground="{StaticResource TextBrush}" FontSize="12">
                                            <Run Text="{Binding Dimensions, Mode=OneWay}"/>
                                            <Run Text=" "/>
                                            <Run Text="{DynamicResource Emb_Dimensions}"/>
                                        </TextBlock>
                                    </Border>
                                    <Border Background="{StaticResource SurfaceLightBrush}"
                                            CornerRadius="4"
                                            Padding="8,4"
                                            Margin="0,0,8,0">
                                        <TextBlock Text="{Binding SizeText}" 
                                                   Foreground="{StaticResource TextBrush}" 
                                                   FontSize="12"/>
                                    </Border>
                                </StackPanel>

                                <!-- Hardware Requirements -->
                                <StackPanel Grid.Row="3" Grid.ColumnSpan="2"
                                            Orientation="Horizontal"
                                            Margin="24,8,0,0">
                                    <Border Background="#1a3b82f6"
                                            CornerRadius="4"
                                            Padding="8,4"
                                            Margin="0,0,8,0">
                                        <TextBlock Foreground="#3B82F6" FontSize="12">
                                            <Run Text="ðŸ’¾ "/>
                                            <Run Text="{Binding RamRequired, Mode=OneWay}"/>
                                        </TextBlock>
                                    </Border>
                                    <Border Background="#1a22c55e"
                                            CornerRadius="4"
                                            Padding="8,4"
                                            Margin="0,0,8,0">
                                        <TextBlock Foreground="#22C55E" FontSize="12">
                                            <Run Text="âš¡ "/>
                                            <Run Text="{Binding InferenceSpeed, Mode=OneWay}"/>
                                        </TextBlock>
                                    </Border>
                                </StackPanel>

                                <!-- Recommended For -->
                                <TextBlock Grid.Row="4" Grid.ColumnSpan="2"
                                           Foreground="{StaticResource PrimaryBrush}"
                                           FontSize="12"
                                           TextWrapping="Wrap"
                                           Margin="24,8,0,0">
                                    <Run Text="{DynamicResource Emb_Recommended}"/>
                                    <Run Text=" "/>
                                    <Run Text="{Binding RecommendedFor, Mode=OneWay}"/>
                                </TextBlock>

                                <!-- Languages -->
                                <TextBlock Grid.Row="5" Grid.ColumnSpan="2"
                                           Foreground="{StaticResource TextMutedBrush}"
                                           FontSize="11"
                                           Margin="24,8,0,0">
                                    <Run Text="{DynamicResource Emb_Languages}"/>
                                    <Run Text=" "/>
                                    <Run Text="{Binding Languages, Mode=OneWay}"/>
                                </TextBlock>

                                <!-- Download progress for partial -->
                                <ProgressBar Grid.Row="5" Grid.ColumnSpan="2"
                                             Value="{Binding DownloadPercent, Mode=OneWay}"
                                             Maximum="100"
                                             Height="4"
                                             Margin="24,30,0,0"
                                             Foreground="{StaticResource PrimaryBrush}"
                                             Background="{StaticResource SurfaceLightBrush}"
                                             Visibility="{Binding Status, Converter={StaticResource PartialProgressVis}}"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Test Section -->
            <Border Background="{StaticResource SurfaceBrush}" 
                    CornerRadius="8" 
                    Padding="16"
                    Margin="0,16,0,0">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="{DynamicResource Emb_TestSimilarity}" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextBrush}"/>
                            <TextBlock Text="{DynamicResource Emb_TestDesc}"
                                       Foreground="{StaticResource TextMutedBrush}"
                                       FontSize="12"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                        <Button Grid.Column="1"
                                Content="{DynamicResource Emb_RunTest}"
                                Style="{StaticResource PrimaryButton}"
                                Command="{Binding RunEmbeddingTestCommand}"
                                IsEnabled="{Binding IsTestRunning, Converter={StaticResource InverseBoolConverter}}"
                                Padding="16,8"/>
                    </Grid>
                    
                    <!-- Loading indicator -->
                    <StackPanel Orientation="Horizontal" 
                                Margin="0,12,0,0"
                                Visibility="{Binding IsTestRunning, Converter={StaticResource BoolToVis}}">
                        <TextBlock Text="{DynamicResource Emb_Generating}" 
                                   Foreground="{StaticResource PrimaryBrush}"
                                   FontSize="13"/>
                    </StackPanel>
                    
                    <!-- Test Results -->
                    <Border Background="{StaticResource BackgroundBrush}"
                            CornerRadius="6"
                            Padding="12"
                            Margin="0,12,0,0"
                            Visibility="{Binding HasTestResults, Converter={StaticResource BoolToVis}}">
                        <ScrollViewer MaxHeight="400" VerticalScrollBarVisibility="Auto">
                            <TextBlock Text="{Binding TestResults}"
                                       FontFamily="Consolas"
                                       FontSize="12"
                                       Foreground="{StaticResource TextBrush}"
                                       TextWrapping="NoWrap"/>
                        </ScrollViewer>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Info Section -->
            <Border Background="{StaticResource SurfaceBrush}" 
                    CornerRadius="8" 
                    Padding="16"
                    Margin="0,8,0,0">
                <StackPanel>
                    <TextBlock Text="{DynamicResource Emb_Info}" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextBrush}"
                               Margin="0,0,0,8"/>
                    <TextBlock Foreground="{StaticResource TextMutedBrush}" 
                               FontSize="12"
                               TextWrapping="Wrap">
                        <Run Text="{DynamicResource Emb_InfoE5}"/>
                        <LineBreak/>
                        <Run Text="{DynamicResource Emb_InfoDimensions}"/>
                        <LineBreak/>
                        <Run Text="{DynamicResource Emb_InfoResume}"/>
                        <LineBreak/>
                        <Run Text="{DynamicResource Emb_InfoPath}"/>
                    </TextBlock>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
