<UserControl x:Class="WPFLLM.Views.EmbeddingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WPFLLM.ViewModels">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <StackPanel MaxWidth="800">
            
            <!-- Header -->
            <TextBlock Text="âš¡ Embeddingi Lokalne" 
                       FontSize="28" 
                       FontWeight="Bold"
                       Foreground="{StaticResource TextBrush}"
                       Margin="0,0,0,8"/>
            <TextBlock Text="Generuj embeddingi lokalnie bez API - szybciej, taniej, prywatniej"
                       Foreground="{StaticResource TextMutedBrush}"
                       FontSize="14"
                       Margin="0,0,0,24"/>

            <!-- Mode Toggle -->
            <Border Background="{StaticResource SurfaceBrush}" 
                    CornerRadius="8" 
                    Padding="16"
                    Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel>
                        <TextBlock Text="Tryb embeddingÃ³w" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextBrush}"/>
                        <TextBlock Foreground="{StaticResource TextMutedBrush}" FontSize="13" Margin="0,4,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="Obecnie: API (OpenRouter/OpenAI)"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding UseLocalEmbeddings}" Value="True">
                                            <Setter Property="Text" Value="Obecnie: Model lokalny"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock Text="{Binding CurrentModelStatus}" 
                                   Foreground="{StaticResource PrimaryBrush}"
                                   FontSize="12"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="API" 
                                   Foreground="{StaticResource TextMutedBrush}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        <CheckBox IsChecked="{Binding UseLocalEmbeddings}"
                                  VerticalAlignment="Center">
                            <CheckBox.LayoutTransform>
                                <ScaleTransform ScaleX="1.3" ScaleY="1.3"/>
                            </CheckBox.LayoutTransform>
                        </CheckBox>
                        <TextBlock Text="Lokalny" 
                                   Foreground="{StaticResource TextBrush}"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Load Model Button -->
            <Border Background="{StaticResource SurfaceBrush}" 
                    CornerRadius="8" 
                    Padding="16"
                    Margin="0,0,0,24"
                    Visibility="{Binding UseLocalEmbeddings, Converter={StaticResource BoolToVis}}">
                <StackPanel Orientation="Horizontal">
                    <Button Content="ðŸš€ ZaÅ‚aduj wybrany model"
                            Style="{StaticResource PrimaryButton}"
                            Command="{Binding LoadModelCommand}"
                            Padding="16,8"/>
                    <Button Content="ðŸ”„ OdÅ›wieÅ¼ status"
                            Style="{StaticResource SecondaryButton}"
                            Command="{Binding RefreshStatusCommand}"
                            Padding="12,8"
                            Margin="8,0,0,0"/>
                </StackPanel>
            </Border>

            <!-- Download Progress -->
            <Border Background="{StaticResource SurfaceBrush}" 
                    CornerRadius="8" 
                    Padding="16"
                    Margin="0,0,0,16"
                    Visibility="{Binding IsDownloading, Converter={StaticResource BoolToVis}}">
                <StackPanel>
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding DownloadStatus}" 
                                   Foreground="{StaticResource TextBrush}"
                                   FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="1" 
                                   Foreground="{StaticResource TextMutedBrush}">
                            <Run Text="{Binding DownloadProgress, StringFormat='{}{0:F1}%'}"/>
                        </TextBlock>
                    </Grid>
                    
                    <ProgressBar Value="{Binding DownloadProgress}" 
                                 Maximum="100"
                                 Height="8"
                                 Foreground="{StaticResource PrimaryBrush}"
                                 Background="{StaticResource SurfaceLightBrush}"/>
                    
                    <Grid Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Foreground="{StaticResource TextMutedBrush}" FontSize="12">
                            <Run Text="Pobrano: "/>
                            <Run Text="{Binding DownloadedBytes, Converter={StaticResource SizeConverter}, Mode=OneWay}"/>
                            <Run Text=" / "/>
                            <Run Text="{Binding TotalBytes, Converter={StaticResource SizeConverter}, Mode=OneWay}"/>
                        </TextBlock>
                        <Button Grid.Column="1"
                                Content="âœ• Anuluj"
                                Style="{StaticResource SecondaryButton}"
                                Command="{Binding CancelDownloadCommand}"
                                Padding="12,4"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Status Message -->
            <TextBlock Text="{Binding StatusMessage}"
                       Foreground="{StaticResource PrimaryBrush}"
                       FontSize="13"
                       Margin="0,0,0,16"
                       Visibility="{Binding StatusMessage, Converter={StaticResource StringToVis}}"/>

            <!-- Available Models -->
            <TextBlock Text="ðŸ“¦ DostÄ™pne modele" 
                       FontSize="18" 
                       FontWeight="Bold"
                       Foreground="{StaticResource TextBrush}"
                       Margin="0,0,0,12"/>

            <ItemsControl ItemsSource="{Binding AvailableModels}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{StaticResource SurfaceBrush}" 
                                CornerRadius="8" 
                                Padding="16"
                                Margin="0,0,0,12"
                                BorderThickness="2"
                                Cursor="Hand"
                                MouseLeftButtonDown="Model_Click">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Title & Status & Quality -->
                                <StackPanel Orientation="Horizontal">
                                    <RadioButton IsChecked="{Binding IsSelected}" 
                                                 GroupName="Models"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding DisplayName}" 
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TextBrush}"/>
                                    <TextBlock Text="{Binding QualityStars}" 
                                               Foreground="#FFD700"
                                               FontSize="14"
                                               VerticalAlignment="Center"
                                               Margin="8,0,0,0"
                                               ToolTip="Ocena jakoÅ›ci"/>
                                    <Border Background="{StaticResource SurfaceLightBrush}"
                                            CornerRadius="4"
                                            Padding="8,2"
                                            Margin="8,0,0,0">
                                        <TextBlock Text="{Binding StatusText}" 
                                                   FontSize="11"
                                                   Foreground="{StaticResource TextMutedBrush}"/>
                                    </Border>
                                </StackPanel>

                                <!-- Buttons -->
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Button Content="â¬‡ï¸ Pobierz"
                                            Style="{StaticResource PrimaryButton}"
                                            Command="{Binding DataContext.DownloadModelCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Padding="12,6"
                                            Margin="0,0,4,0">
                                        <Button.Visibility>
                                            <MultiBinding Converter="{StaticResource DownloadButtonVis}">
                                                <Binding Path="Status"/>
                                                <Binding Path="DataContext.IsDownloading" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                            </MultiBinding>
                                        </Button.Visibility>
                                    </Button>
                                    <Button Content="â–¶ï¸ WznÃ³w"
                                            Style="{StaticResource SecondaryButton}"
                                            Command="{Binding DataContext.DownloadModelCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Padding="12,6"
                                            Margin="0,0,4,0">
                                        <Button.Visibility>
                                            <MultiBinding Converter="{StaticResource ResumeButtonVis}">
                                                <Binding Path="Status"/>
                                                <Binding Path="DataContext.IsDownloading" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                            </MultiBinding>
                                        </Button.Visibility>
                                    </Button>
                                    <Button Content="ðŸ—‘ï¸"
                                            Style="{StaticResource SecondaryButton}"
                                            Command="{Binding DataContext.DeleteModelCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Padding="8,6"
                                            ToolTip="UsuÅ„ model">
                                        <Button.Visibility>
                                            <Binding Path="Status" Converter="{StaticResource DeleteButtonVis}"/>
                                        </Button.Visibility>
                                    </Button>
                                </StackPanel>

                                <!-- Description -->
                                <TextBlock Grid.Row="1" Grid.ColumnSpan="2"
                                           Text="{Binding Description}"
                                           Foreground="{StaticResource TextMutedBrush}"
                                           FontSize="13"
                                           TextWrapping="Wrap"
                                           Margin="24,8,0,0"/>

                                <!-- Stats -->
                                <StackPanel Grid.Row="2" Grid.ColumnSpan="2"
                                            Orientation="Horizontal"
                                            Margin="24,8,0,0">
                                    <Border Background="{StaticResource SurfaceLightBrush}"
                                            CornerRadius="4"
                                            Padding="8,4"
                                            Margin="0,0,8,0">
                                        <TextBlock Foreground="{StaticResource TextBrush}" FontSize="12">
                                            <Run Text="{Binding Dimensions, Mode=OneWay}"/>
                                            <Run Text=" wymiarÃ³w"/>
                                        </TextBlock>
                                    </Border>
                                    <Border Background="{StaticResource SurfaceLightBrush}"
                                            CornerRadius="4"
                                            Padding="8,4"
                                            Margin="0,0,8,0">
                                        <TextBlock Text="{Binding SizeText}" 
                                                   Foreground="{StaticResource TextBrush}" 
                                                   FontSize="12"/>
                                    </Border>
                                </StackPanel>

                                <!-- Hardware Requirements -->
                                <StackPanel Grid.Row="3" Grid.ColumnSpan="2"
                                            Orientation="Horizontal"
                                            Margin="24,8,0,0">
                                    <Border Background="#1a3b82f6"
                                            CornerRadius="4"
                                            Padding="8,4"
                                            Margin="0,0,8,0">
                                        <TextBlock Foreground="#3B82F6" FontSize="12">
                                            <Run Text="ðŸ’¾ "/>
                                            <Run Text="{Binding RamRequired, Mode=OneWay}"/>
                                        </TextBlock>
                                    </Border>
                                    <Border Background="#1a22c55e"
                                            CornerRadius="4"
                                            Padding="8,4"
                                            Margin="0,0,8,0">
                                        <TextBlock Foreground="#22C55E" FontSize="12">
                                            <Run Text="âš¡ "/>
                                            <Run Text="{Binding InferenceSpeed, Mode=OneWay}"/>
                                        </TextBlock>
                                    </Border>
                                </StackPanel>

                                <!-- Recommended For -->
                                <TextBlock Grid.Row="4" Grid.ColumnSpan="2"
                                           Foreground="{StaticResource PrimaryBrush}"
                                           FontSize="12"
                                           TextWrapping="Wrap"
                                           Margin="24,8,0,0">
                                    <Run Text="âœ… Zalecane: "/>
                                    <Run Text="{Binding RecommendedFor, Mode=OneWay}"/>
                                </TextBlock>

                                <!-- Languages -->
                                <TextBlock Grid.Row="5" Grid.ColumnSpan="2"
                                           Foreground="{StaticResource TextMutedBrush}"
                                           FontSize="11"
                                           Margin="24,8,0,0">
                                    <Run Text="ðŸŒ JÄ™zyki: "/>
                                    <Run Text="{Binding Languages, Mode=OneWay}"/>
                                </TextBlock>

                                <!-- Download progress for partial -->
                                <ProgressBar Grid.Row="5" Grid.ColumnSpan="2"
                                             Value="{Binding DownloadPercent}"
                                             Maximum="100"
                                             Height="4"
                                             Margin="24,30,0,0"
                                             Foreground="{StaticResource PrimaryBrush}"
                                             Background="{StaticResource SurfaceLightBrush}"
                                             Visibility="{Binding Status, Converter={StaticResource PartialProgressVis}}"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Test Section -->
            <Border Background="{StaticResource SurfaceBrush}" 
                    CornerRadius="8" 
                    Padding="16"
                    Margin="0,16,0,0">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="ðŸ§ª Test podobieÅ„stwa sÅ‚Ã³w polskich" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextBrush}"/>
                            <TextBlock Text="SprawdÅº jakoÅ›Ä‡ embeddingÃ³w na przykÅ‚adowych sÅ‚owach polskich"
                                       Foreground="{StaticResource TextMutedBrush}"
                                       FontSize="12"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                        <Button Grid.Column="1"
                                Content="â–¶ï¸ Uruchom test"
                                Style="{StaticResource PrimaryButton}"
                                Command="{Binding RunEmbeddingTestCommand}"
                                IsEnabled="{Binding IsTestRunning, Converter={StaticResource InverseBoolConverter}}"
                                Padding="16,8"/>
                    </Grid>
                    
                    <!-- Loading indicator -->
                    <StackPanel Orientation="Horizontal" 
                                Margin="0,12,0,0"
                                Visibility="{Binding IsTestRunning, Converter={StaticResource BoolToVis}}">
                        <TextBlock Text="â³ Generowanie embeddingÃ³w..." 
                                   Foreground="{StaticResource PrimaryBrush}"
                                   FontSize="13"/>
                    </StackPanel>
                    
                    <!-- Test Results -->
                    <Border Background="{StaticResource BackgroundBrush}"
                            CornerRadius="6"
                            Padding="12"
                            Margin="0,12,0,0"
                            Visibility="{Binding HasTestResults, Converter={StaticResource BoolToVis}}">
                        <ScrollViewer MaxHeight="400" VerticalScrollBarVisibility="Auto">
                            <TextBlock Text="{Binding TestResults}"
                                       FontFamily="Consolas"
                                       FontSize="12"
                                       Foreground="{StaticResource TextBrush}"
                                       TextWrapping="NoWrap"/>
                        </ScrollViewer>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Info Section -->
            <Border Background="{StaticResource SurfaceBrush}" 
                    CornerRadius="8" 
                    Padding="16"
                    Margin="0,8,0,0">
                <StackPanel>
                    <TextBlock Text="â„¹ï¸ Informacje" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextBrush}"
                               Margin="0,0,0,8"/>
                    <TextBlock Foreground="{StaticResource TextMutedBrush}" 
                               FontSize="12"
                               TextWrapping="Wrap">
                        <Run Text="â€¢ Modele E5 wymagajÄ… prefixu 'query:' lub 'passage:' - dodawany automatycznie"/>
                        <LineBreak/>
                        <Run Text="â€¢ WiÄ™ksze wymiary = lepsza jakoÅ›Ä‡, ale wiÄ™cej miejsca i pamiÄ™ci"/>
                        <LineBreak/>
                        <Run Text="â€¢ Pobieranie moÅ¼na wznowiÄ‡ po przerwaniu"/>
                        <LineBreak/>
                        <Run Text="â€¢ Modele zapisywane w: %LocalAppData%\WPFLLM\models\"/>
                    </TextBlock>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
